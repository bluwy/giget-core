{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "test-dump"]
}
